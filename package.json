{
    "name": "minimal-typescript-express-setup",
    "version": "0.0.0",
    "private": true,
    "author": {
        "name": "Tjeu Foolen",
        "email": "tjeu@foolen.me",
        "url": "https://github.com/tjeufoolen"
    },
    "main": "dist/app.js",
    "scripts": {
        "prepare": "husky install",
        "clean": "rimraf dist/*",
        "lint": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
        "pretty": "prettier --write \"**/*.ts\"",
        "tsc": "tsc --removeComments",
        "build": "npm-run-all clean lint tsc",
        "dev:start": "npm-run-all build start",
        "dev": "nodemon --watch src -e ts --exec npm run dev:start",
        "start": "node dist/app",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run pretty && npm run lint"
        }
    },
    "lint-staged": {
        "src/**/*.{js,ts,json}": [
            "npm run pretty",
            "npm run lint"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "printWidth": 120
    },
    "eslintConfig": {
        "root": true,
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "@typescript-eslint"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended"
        ]
    },
    "eslintIgnore": [
        "!.husky",
        "!.prettierignore",
        "README.md"
    ],
    "dependencies": {
        "consola": "^2.15.3",
        "dotenv": "^10.0.0",
        "express": "~4.16.1",
        "http-errors": "~1.6.3"
    },
    "devDependencies": {
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.13",
        "@types/http-errors": "^1.8.1",
        "@types/node": "^16.11.6",
        "@typescript-eslint/eslint-plugin": "^5.3.0",
        "@typescript-eslint/parser": "^5.3.0",
        "eslint": "^8.1.0",
        "husky": "^7.0.4",
        "lint-staged": "^11.2.6",
        "nodemon": "^2.0.14",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.4.1",
        "rimraf": "^3.0.2",
        "typescript": "^4.4.4"
    }
}
