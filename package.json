{
  "name": "minimal-typescript-express-setup",
  "version": "0.0.0",
  "private": true,
  "author": {
    "name": "Tjeu Foolen",
    "email": "tjeu@foolen.me",
    "url": "https://github.com/tjeufoolen"
  },
  "main": "dist/app.js",
  "scripts": {
    "prepare": "husky install",
    "clean": "rimraf dist/*",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "pretty": "prettier --write ./**/*.ts",
    "tsc": "tsc --removeComments",
    "build": "npm-run-all clean lint tsc",
    "dev:start": "npm-run-all build start",
    "dev": "nodemon --exec npm run dev:start",
    "start": "node dist/app",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "nodemonConfig": {
    "verbose": true,
    "ignore": [
        ".git",
        "dist", 
        "node_modules"
    ],
    "ext": "ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pretty && npm run lint"
    }
  },
  "prettier": {
    "tabWidth": 4,
    "printWidth": 120
  },
  "dependencies": {
    "consola": "^2.15.3",
    "dotenv": "^10.0.0",
    "express": "~4.16.1",
    "http-errors": "~1.6.3"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/http-errors": "^1.8.1",
    "@types/node": "^16.11.6",
    "husky": "^7.0.4",
    "nodemon": "^2.0.14",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^4.4.4"
  }
}
